rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ════════════════════════════════════════════════════════════
    // HELPER FUNCTIONS
    // ════════════════════════════════════════════════════════════
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isCoach(coachId) {
      return request.auth.uid == coachId;
    }
    
    // ════════════════════════════════════════════════════════════
    // COACHES & CLIENTS (MANTENER)
    // ════════════════════════════════════════════════════════════
    
    match /coaches/{coachId} {
      allow read, write: if isAuthenticated() && isCoach(coachId);
      
      match /appointments/{appointmentId} {
        allow read, write: if isAuthenticated() && isCoach(coachId);
      }
      
      match /transactions/{transactionId} {
        allow read, write: if isAuthenticated() && isCoach(coachId);
      }
      
      match /clients/{clientId} {
        allow read, write: if isAuthenticated() && isCoach(coachId);
        
        match /anthropometry_records/{recordId} {
          allow read, write: if isAuthenticated() && isCoach(coachId);
        }
        
        match /biochemistry_records/{recordId} {
          allow read, write: if isAuthenticated() && isCoach(coachId);
        }
        
        match /nutrition_records/{recordId} {
          allow read, write: if isAuthenticated() && isCoach(coachId);
        }
        
        match /training_records/{recordId} {
          allow read, write: if isAuthenticated() && isCoach(coachId);
        }
      }
    }
    
    // ════════════════════════════════════════════════════════════
    // ✅ ML TRAINING DATA (NUEVO - CRÍTICO)
    // ════════════════════════════════════════════════════════════
    
    match /ml_training_data/{exampleId} {
      allow read, write: if isAuthenticated() &&
        resource.data.coachId == request.auth.uid;
      allow create: if isAuthenticated() &&
        request.resource.data.coachId == request.auth.uid;
    }
  }
}
